{% extends 'IARMainBundle:Admin:layout.html.twig' %}

{% block main -%}
    <h1>Solicitud list</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Detalles</th>
                <th>Marca</th>
                <th>Modelo</th>
                <th>Zona</th>
                <th>Nombre</th>
                <th>Apellido</th>
                <th>Email</th>
                <th>Telefono</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('admin_solicitud_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.detalles }}</td>
                <td>{{ entity.brand }}</td>
                <td>{{ entity.model }}</td>
                <td>{{ entity.zonas|join('|') }}</td>
                <td>{{ entity.nombre }}</td>
                <td>{{ entity.apellido }}</td>
                <td>{{ entity.email }}</td>
                <td>{{ entity.telefono }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('admin_solicitud_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('admin_solicitud_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('admin_solicitud_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
