{% extends 'IARMainBundle:Admin:layout.html.twig' %}

{% block main -%}
    <h1>Brand list</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Disabled</th>
                <th>Logofilename</th>
                <th>Logox</th>
                <th>Logoy</th>
                <th>Logosizex</th>
                <th>Logosizey</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('admin_brand_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.name }}</td>
                <td>{{ entity.disabled }}</td>
                <td>{{ entity.logoFilename }}</td>
                <td>{{ entity.logoX }}</td>
                <td>{{ entity.logoY }}</td>
                <td>{{ entity.logoSizeX }}</td>
                <td>{{ entity.logoSizeY }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('admin_brand_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('admin_brand_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('admin_brand_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
