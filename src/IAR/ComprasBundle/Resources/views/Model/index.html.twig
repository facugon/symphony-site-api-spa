{% extends 'IARMainBundle:Admin:layout.html.twig' %}

{% block main -%}
    <h1>Model list</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Brand</th>
                <th>Synonym</th>
                <th>Slug</th>
                <th>Shortname</th>
                <th>Picfilename</th>
                <th>Disabled</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('admin_model_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.name }}</td>
                <td>{{ entity.brand }}</td>
                <td>{{ entity.synonym }}</td>
                <td>{{ entity.slug }}</td>
                <td>{{ entity.shortName }}</td>
                <td>{{ entity.picFilename }}</td>
                <td>{{ entity.disabled }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('admin_model_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('admin_model_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('admin_model_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
