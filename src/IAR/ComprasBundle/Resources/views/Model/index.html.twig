{% extends 'IARMainBundle:Admin:layout.html.twig' %}

{% block main -%}
    <h1>Model list</h1>

    <div id="table_report_wrapper" class="dataTables_wrapper">
        <table id="table_report" class="table table-striped table-bordered table-hover dataTable">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Name</th>
                    <th>Brand</th>
                    <th>Synonym</th>
                    <th>Slug</th>
                    <th>Shortname</th>
                    <th>Picfilename</th>
                    <th>Disabled</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                {% for entity in entities %}
                <tr>
                    <td><a href="{{ path('admin_model_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                    <td>{{ entity.name }}</td>
                    <td>{{ entity.brand }}</td>
                    <td>{{ entity.synonym }}</td>
                    <td>{{ entity.slug }}</td>
                    <td>{{ entity.shortName }}</td>
                    <td>{{ entity.picFilename }}</td>
                    <td>{{ entity.disabled }}</td>
                    <td>
                        <ul>
                            <li>
                            <a href="{{ path('admin_model_show', { 'id': entity.id }) }}">show</a>
                            </li>
                            <li>
                            <a href="{{ path('admin_model_edit', { 'id': entity.id }) }}">edit</a>
                            </li>
                        </ul>
                    </td>
                </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>

    <ul>
        <li>
        <a href="{{ path('admin_model_new') }}">
            Create a new entry
        </a>
        </li>
        <script type="text/javascript" src="{{ asset('/bundles/iarcompras/js/admin_model.js')          }} "></script>    </ul>
{% endblock %}
