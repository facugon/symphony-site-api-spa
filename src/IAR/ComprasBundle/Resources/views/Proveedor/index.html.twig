{% extends 'IARMainBundle:Admin:layout.html.twig' %}

{% block main -%}
    <h1>Proveedor list</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Codigo CE</th>
                <th>Nombre CE</th>
                <th>Provincia</th>
                <th>Localidad</th>
                <th>Zona</th>
                <th>Email</th>
                <th>Telefono</th>
                <th>Nombre Responsable</th>
                <th>Apellido Responsable</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('admin_proveedor_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.codigoCe }}</td>
                <td>{{ entity.nombreCe }}</td>
                <td>{{ entity.provincia }}</td>
                <td>{{ entity.localidad }}</td>
                <td>{{ entity.zona }}</td>
                <td>{{ entity.email }}</td>
                <td>{{ entity.telefono }}</td>
                <td>{{ entity.nombreResponsable }}</td>
                <td>{{ entity.apellidoResponsable }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('admin_proveedor_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('admin_proveedor_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('admin_proveedor_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
