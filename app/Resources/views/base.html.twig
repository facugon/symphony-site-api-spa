        <title>{% block title %}Welcome!{% endblock %}</title>

        {% block stylesheets %}
        <link rel="stylesheet" href="{{ asset('/css/lib/bootstrap.min.css') }}" />
        <link rel="stylesheet" href="{{ asset('/css/lib/carousel.css') }}" />
        <link rel="stylesheet" href="{{ asset('/css/main.css') }}" />
        {% endblock %}

        <link rel="shortcut icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
        <style id="holderjs-style" type="text/css"></style>
    </head>
    <body>
        {% block body %}
        {% endblock %}

        {% block javascripts %}
        <!-- load at the end basic scripts -->
        <script src="{{ asset('/js/lib/jquery-1.10.2.min.js') }}"></script>
        <script src="{{ asset('/js/lib/bootstrap.min.js') }}"></script>
        <script src="{{ asset('/js/lib/require.js') }}"></script>

        <script src="{{ asset('/js/lib/jquery.blockui.js') }}"></script>
        <script>
            jQuery(function($) {
                $(document).ajaxStart($.blockUI).ajaxStop($.unblockUI); 
            });
        </script>

        {% endblock %}
    </body>
</html>
